<view class="top">
    <image class="head-pic" src="../../img/head-pic.png" />
    <view class="name">{{name}}</view>
    <view class="course">{{course}}</view>
    <button class='btn' bindtap='pingjia'>我要评价</button>
    <image class="bgc" src="../../img/background.jpg" mode="aspectFill"/>

</view>
<view class='two'>
    <button class='two-one' bindtap='toOne'>评价</button> 
    <button class='two-one' bindtap='toTwo'>详情</button> 
</view>
<block wx:if="{{two}}">
<view class='label'>
<view wx:for="{{hotTag}}" wx:for-item="hotTagItem" wx:key="hotTagItem" class="search-keyword-item" data-keyword="{{hotTagItem}}" bindtap="searchByTag">{{hotTagItem.hotTagItem}}</view>   
</view>


<view wx:for="{{commentData}}" wx:for-item="commentItem" class='userCommnet'>
<image src='{{commentItem.img}}' class='img' />
<view class='comment'>               
    <view class="a" href="">{{commentItem.user}}</view>
    <view class='p'>{{commentItem.comment}}</view>
    <view class='span'>{{commentItem.date}}</view>
    <view class='up' href="">赞</view>
</view>
</view>


<image src='../../img/background.jpg' class='img' />
